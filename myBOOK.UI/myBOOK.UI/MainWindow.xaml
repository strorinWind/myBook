<Window x:Class="myBOOK.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:myBOOK.UI"
        mc:Ignorable="d"
        Title="MainWindow" Height="300" Width="400">
    <Window.Background>
        <ImageBrush ImageSource=" C:\Users\Nati\Source\Repos\myBook\myBOOK.UI\myBOOK.data\image\background.jpg"/>
    </Window.Background>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TextBlock Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,22,69,0">Username:</TextBlock>
        <TextBox Name="Username" Grid.Row="1" Height="20" Width="130" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="18,10,0,8" Grid.Column="1" BorderBrush="Chocolate" />
        <TextBlock Grid.Row="3" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,7,69,15">Password:</TextBlock>
        <PasswordBox Name="Password" Grid.Row="3" Height="20" Width="130" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="18,0,0,18" Grid.Column="1" BorderBrush="Chocolate"/>
        <Button Name="Enter" Grid.Row="4" Grid.Column="1" Height="20" Width="80" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="46,23,0,34" Click="Enter_Click" Grid.RowSpan="2">Войти
        </Button>
        <Button Name="Registration" Grid.Row="6" Height="20" Width="80" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,9,77,10" Click="Registration_Click" Grid.Column="1">Регистрация
        </Button>
        <Menu x:Name="menu" Height="20" Width="350" VerticalAlignment="Top" RenderTransformOrigin="0.497,0.538" Grid.ColumnSpan="2" Margin="0,0,136,0">
            <MenuItem Header="About" Width="70"></MenuItem>
            <MenuItem Header="Help" Width="70"></MenuItem>
            <MenuItem Header="Autors" Width="70"></MenuItem>
            <MenuItem Header="Close" Width="70"></MenuItem>
            <MenuItem Header="Language" Width="70">
                <MenuItem Header="Russian"/>
                <MenuItem Header="English"/>
            </MenuItem>
            <Menu.BitmapEffect>
                <DropShadowBitmapEffect/>
            </Menu.BitmapEffect>
            <Menu.Background>
                <LinearGradientBrush EndPoint="0,1" StartPoint="0,0">
                    <GradientStop Color="Chocolate" Offset="1"/>
                </LinearGradientBrush>
            </Menu.Background>
        </Menu>
    </Grid>
</Window>
