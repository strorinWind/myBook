<Window x:Class="myBOOK.UI.BookInfo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:myBOOK.UI"
        mc:Ignorable="d"
        Title="BookInfo" Height="600" Width="800">
    <Window.Background>
        <ImageBrush ImageSource="pack://application:,,,/image/background.jpg"/>
    </Window.Background>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="4*"/>
            <ColumnDefinition Width="4*"/>
            <ColumnDefinition Width="4*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <TextBlock Grid.Column="1" Grid.Row="2" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,44,9,11" Foreground="White">Название:</TextBlock>
        <TextBox Name="bookname" Grid.Row="2" Grid.Column="2" Height="23" Width="140" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="27,38,0,10" BorderBrush="BurlyWood" Background="Cornsilk">
        </TextBox>
        <TextBlock Grid.Column="1" Grid.Row="3" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,38,10,10" Height="23" Width="38" Foreground="White">Автор:</TextBlock>
        <TextBox Name="author" Grid.Row="3" Grid.Column="2" Height="23" Width="140" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="27,38,0,10" BorderBrush="BurlyWood" Background="Cornsilk">
        </TextBox>
        <Button Name="Search" Grid.Column="2" Grid.Row="5" Width="157" HorizontalAlignment="Center" Click="Search_Click" RenderTransformOrigin="0.509,2.55" Margin="10,24,31,10" Background="Transparent" BorderBrush="Chocolate" Foreground="White">Поиск
        </Button>
        <ListBox Name="BookList" Grid.Row="1" Grid.Column="3" Grid.RowSpan="5" Grid.ColumnSpan="2" HorizontalContentAlignment="Stretch" Padding="2" Margin="0,10">
            <ListBox.ItemTemplate>
                <DataTemplate DataType="local:Books">
                    <Grid Margin="0 5" Background="Cornsilk">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Margin="5 0 20 0" FontSize="18" Text="{Binding BookName}"/>
                        <TextBlock Grid.Column="1" FontSize="18" Text="{Binding Author}"/>
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</Window>
